<html lang="en">
<%- include('templates/head') %>
<body>
   <%- include('templates/navbar') %>
   <main class="item-detail-container">
      <div class="item-img-container">
         <% if(item.profile_img) { %>
            <img class="item-image detail" src="<%= item.profile_img %>" alt="Item Image">
         <% } else { %>
            <img class="item-image detail" src="/images/Image.png" alt="Item Image">
         <%  } %>
      </div>
      <div class="info-container">
         <div class="header-container">
            <h1 class="name"><%= item.name %></h1>
         </div>
         <p class="margin-top-reduce">Are you sure you want to delete this item?</p>
         <form class="flex-two-buttons" method="POST" action="">
          <button type="submit" class="btn red small">Delete</button>
          <a href="<%= item.url %>" class="btn small">Cancel</a>
        </form>
         <hr>
         <p class="description">Description: <%= item.description %></p>
         <p><a href=<%= item.category.url %>>Category: <%= item.category.name %></a></p>
         <p>Price: $<%= item.price %></p>
      </div>
   </main>
</body>
</html>